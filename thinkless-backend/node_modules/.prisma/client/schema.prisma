generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum TransactionType {
  INCOME
  EXPENSE
  INVESTMENT
}

enum CategoryName {
  SALARIO
  EXTRAS
  ALUGUEIS
  MORADIA
  TRANSPORTE
  SAUDE
  EDUCACAO
  ASSINATURAS
  ALIMENTACAO
  CUIDADOS_PESSOAIS
  OUTROS
}

enum GoalType {
  REVENUE
  EXPENSE
  INVESTMENT
}

model User {
  id           Int           @id @default(autoincrement())
  name         String?
  email        String        @unique
  password     String
  createdAt    DateTime      @default(now())
  transactions Transaction[]
  goals        Goal[]
}

model Transaction {
  id          Int             @id @default(autoincrement())
  title       String
  amount      Float
  type        TransactionType
  category    CategoryName
  isRecurring Boolean         @default(false)
  endDate     DateTime?
  createdAt   DateTime        @default(now())
  userId      Int
  user        User            @relation(fields: [userId], references: [id])
}

model Goal {
  id        Int      @id @default(autoincrement())
  type      GoalType
  amount    Float
  monthYear DateTime
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@unique([userId, type, monthYear])
}
